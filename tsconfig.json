{
  "compilerOptions": {
    "jsx": "react",
    "outDir": "dist",
    "module": "ES6",
    "target": "ES6",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
